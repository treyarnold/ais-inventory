  {{> navbar }}

  <container class="text-center">
      <div class="jumbotron mx-auto jumbotron-fluid">
          <h1 class="display-4">Add Product to Inventory</h1>
      </div>
      <div class="row">
          <div class="col-md-3 offset-md-3 center_div">
              <form id="newProduct">
                  <div class="form-group">
                      <label for="name">Product Name:</label>
                      <input placeholder="Jim Beam, Skyy, ect." type="text" class="form-control"
                          id="name">
                      <label for="price">Bottle Price:</label>
                      <input type="number" min="0" step=".01" class="form-control"
                          id="price">
                      <br />
                      <label for="quantity">Quantity of Bottles:</label>
                      <input type="number" min="0" class="form-control"
                          id="quantity">
                       </br>

                      <label for="liquorType" class="pr-3">Liquor Type:</label>
                      <select id="liquorType">
                          <option value = "Vodka">Vodka</option>
                          <option value = "Whiskey">Whiskey</option>
                          <option value = "Gin">Gin</option>
                          <option value = "Rum">Rum</option>
                          <option value = "Scotch">Scotch</option>
                          <option value = "Tequila">Tequila</option>
                      </select>
                          <label class="pr-3 pl-3" for="upc">UPC Barcode:</label>
                          <input type="number" id="upc">
                      <br />
                      <button type="submit" class="mt-5 center-block btn-lg btn btn-warning submit">Submit</button>
                  </div>
              </form>
          </div>
      </div>
  </container>
  <script src="../js/addInventory.js" type="text/javascript"></script>